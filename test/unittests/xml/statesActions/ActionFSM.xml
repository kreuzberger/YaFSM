<root>
<definitions>
  <action name="onRun" param=""/>
  <action name="onNotRun" param="bool bStartFlag"/>
  <action name="onEnterRun" param=""/>
  <action name="onExitRun" param=""/>
  <trigger name="run" param="bool bStart"/>
  <trigger name="end" param=""/>
  <member name="StartCounter" type="int" init="0"/>
  <member name="TestTypeInt" type="tTestInt" init="0"/>
  <include file="inc/TestTypes.h"/>
</definitions>
<fsm>
  <state name="stop" type="entry"/>
  <state name="run">
    <state name="running" type="entry" enter="onEnterRun()" exit="onExitRun()"/>
  </state>
  <transition trigger="run" action="onRun()" begin="stop" end="run" condition="(0 == mStartCounter) &amp;&amp; (true == bStart)"/>
  <transition trigger="run" action="onNotRun(bStart);onNotRun(false);" begin="stop" end="stop" condition="(false == bStart)"/>
  <transition trigger="end" begin="run" end="stop"/>
</fsm>
</root>
